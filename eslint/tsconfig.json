{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "removeComments": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "strictFunctionTypes": false,
    "strict": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "lib": ["dom", "es2015", "es2016"],
    "types": ["node", "jest"],
    "typeRoots": [
      "node_modules/@types",
      "global.d.ts"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*",
    "global.d.ts",
    "jest/enzyme.setup.ts", // jest hits
    "jest/jest-dom.setup.ts",  // jest hits
    "jest/matchers.setup.ts"  // jest hits
  ],
  "exclude": [
    "node_modules"
  ]
}
